{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "shy-to-text",
	"version": "../package.json",
	"identifier": "com.brodino.shy-to-text",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"withGlobalTauri": true,
		"windows": [
			{
				"title": "Shy to Text",
				"width": 500,
				"height": 600,
				"minWidth": 500,
				"minHeight": 500,
				"resizable": true,
				"center": true,
				"visible": true
			}
		],
		"security": {
			"csp": null
		},
		"trayIcon": {
			"iconPath": "icons/32x32.png",
			"iconAsTemplate": true
		}
	},
	"bundle": {
		"active": true,
		"targets": [ "app", "deb", "dmg", "msi", "nsis", "rpm" ],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
